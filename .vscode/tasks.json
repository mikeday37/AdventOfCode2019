{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"windows": {
				"command": "cmd",
				"args": ["/c", "tsc", "-b", "src"]
			},
			"problemMatcher": [
				"$tsc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"label": "tsc: build - src/tsconfig.json",
			"presentation": {
				"echo": true,
				"reveal": "silent",
				"revealProblems": "onProblem",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": false,
				"clear": true
			},
		}
	]
}